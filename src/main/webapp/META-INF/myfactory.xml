<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="foo" class="com.melody.pojo.myfactory.Foo">
        <property name="barInterface" ref="bar"/>
    </bean>
    <bean id="bar" class="com.melody.pojo.myfactory.StaticBarInterfaceFactory" factory-method="getInstance">
        <constructor-arg ref="id"/>
    </bean>
    <bean id="id" class="java.lang.String"/>
</beans>