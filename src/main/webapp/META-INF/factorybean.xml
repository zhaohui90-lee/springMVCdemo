<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="nextDayDateDisplayer" class="com.melody.pojo.factorybean.NextDayDateDisplayer">
        <property name="dateOfNextDay" ref="nextDayDate"/>
    </bean>
    <bean id="nextDayDate" class="com.melody.pojo.factorybean.NextDayDateFactoryBean"/>

    <bean id="newsBean" class="com.melody.pojo.news.FXNewsBean" scope="prototype"/>

<!--  使用beanfactoryaware  -->
    <bean id="mockPersister1" class="com.melody.pojo.factorybean.MockNewsPersister1"/>
<!-- 使用方法注入 -->
    <bean id="mockPersister" class="com.melody.pojo.factorybean.MockNewsPersister">
        <lookup-method name="getNewsBean" bean="newsBean"/>
    </bean>
<!-- 使用ObjectFactoryCreatingFactoryBean -->
    <bean id="mockPersister2" class="com.melody.pojo.factorybean.MockNewsPersister2">
        <property name="newsBeanFactory" ref="newsBeanFactory"/>
    </bean>

    <bean id="newsBeanFactory" class="org.springframework.beans.factory.config.ObjectFactoryCreatingFactoryBean">
        <property name="targetBeanName">
            <idref bean="newsBean"/>
        </property>
    </bean>



